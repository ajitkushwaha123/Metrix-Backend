<!DOCTYPE html>
<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>Invoice</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-size: 12px;
      }

      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 100%;
        padding: 10px; 
        box-sizing: border-box;
      }

      .logo {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 100%;
      }

      .retourant-name {
        font-size: 20px;
        font-weight: bold;
        color: #000;
      }

      .address {
        margin-top: 12px;
        font-size: 16px;
        color: #000;
        text-align: center;
        padding: 0 15px 25px 15px;
      }

      .chakra-petch-light {
        font-family: "Chakra Petch", sans-serif;
        font-weight: 300;
        font-style: normal;
      }

      .chakra-petch-regular {
        font-family: "Chakra Petch", sans-serif;
        font-weight: 400;
        font-style: normal;
      }

      .chakra-petch-medium {
        font-family: "Chakra Petch", sans-serif;
        font-weight: 500;
        font-style: normal;
      }

      .chakra-petch-semibold {
        font-family: "Chakra Petch", sans-serif;
        font-weight: 600;
        font-style: normal;
      }

      .chakra-petch-bold {
        font-family: "Chakra Petch", sans-serif;
        font-weight: 700;
        font-style: normal;
      }

      .border {
        border-bottom: 1px dashed #1b1515;
        margin: 0 30px;
      }

      .date {
        display: flex;
        justify-content: space-between;
        width: 100%;
        padding-left: 20px;
        padding-right: 20px;
        /* padding-bottom: 15px; */
        font-size: 17px;
      }

      .detail {
        width: 76%;
        font-size: 14px;
        margin: 0 50px;
        padding: 0 50px 17px 50px;
        color: #000;
        display: flex;
        flex-direction: column;
        text-transform: uppercase;
      }

      .pad {
        padding-top: 17px;
      }

      .hi {
        display: flex;
        justify-content: space-between;
        text-transform: uppercase;
        margin: 2px -10px;
      }

      .item {
        width: 100%;
        text-align: start;
        text-transform: uppercase;
        display: flex;
        flex-direction: column;
        margin: 0 15px;
      }

      .items {
        font-size: 14px;
        margin: 15px;
        border-collapse: collapse;
      }

      .items th,
      .items td {
        border: 1px dashed #000;
        padding: 5px; /* Reduced padding */
        text-align: left;
      }

      .bord {
        width: 65%;
        margin: 0 30px;
        padding: 0 30px;
      }

      .bottom {
        font-size: 14px;
        margin: 20px 15px 15px 15px;
        text-align: center;
        text-transform: uppercase;
      }

      .hello {
        margin-top: 10px;
        padding: 0 40px;
        margin: 0 20px;
      }

      @media print {
        body {
          margin: 0;
          padding: 0;
        }

        .container {
          width: 100%;
          padding: 0;
        }

        .items th,
        .items td {
          padding: 3px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <img class="logo" src="<%= restourantLogo %>" alt="Restaurant Logo" />

      <div class="retourant-name chakra-petch-semibold">
        <%= restourantName %>
      </div>
      <div class="address chakra-petch-semibold">
        <%= restourantAddress %>
        <br />
        <%= restourantPhone %>
      </div>

      <div class="date chakra-petch-semibold">
        <div class="date">
          <div><%= orderDate %></div>
          <div><%= orderTime %></div>
        </div>
      </div>

      <div class="item">
        <table class="items chakra-petch-medium">
          <thead>
            <tr>
              <th>Qty</th>
              <th>Item</th>
              <th>Price</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody class="hello">
            <% let totalAmount = 0; items.forEach(function(item) { totalAmount
            += item.quantity * item.price; %>
            <tr>
              <td><%= item.quantity %></td>
              <td><%= item.productName %></td>
              <td>
                <%= new Intl.NumberFormat('en-IN', { style: 'currency',
                currency: 'INR' }).format(item.price) %>
              </td>
              <td>
                <%= new Intl.NumberFormat('en-IN', { style: 'currency',
                currency: 'INR' }).format(item.quantity * item.price) %>
              </td>
            </tr>
            <% }); %>
            <tr>
              <td></td>
              <td></td>
              <td>Tax</td>
              <td>
                + <%= new Intl.NumberFormat('en-IN', { style: 'currency',
                currency: 'INR' }).format(tax) %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>Discount</td>
              <td>
                - <%= new Intl.NumberFormat('en-IN', { style: 'currency',
                currency: 'INR' }).format(discount) %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>Total</td>
              <td>
                <%= new Intl.NumberFormat('en-IN', { style: 'currency',
                currency: 'INR' }).format(totalAmount + tax - discount) %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
